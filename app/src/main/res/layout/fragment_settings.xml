<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.dashboard.SettingsFragment">

    <TextView
        android:id="@+id/txt_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:textAllCaps="true"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="24dp"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        app:layout_constraintTop_toBottomOf="@id/txt_settings"
        app:layout_constraintBottom_toTopOf="@id/btn_save">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Change first name to:"
            android:textSize="15sp"
            android:textColor="@color/white"/>

        <EditText
            android:id="@+id/change_first"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:textSize="15sp"
            android:paddingLeft="10dp"
            android:background="@drawable/et_bg"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Change last name to:"
            android:textSize="15sp"
            android:textColor="@color/white"/>

        <EditText
            android:id="@+id/change_last"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:textSize="15sp"
            android:paddingLeft="10dp"
            android:background="@drawable/et_bg"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Change username to:"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:paddingTop="10dp"/>

        <EditText
            android:id="@+id/change_un"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:textSize="15sp"
            android:paddingLeft="10dp"
            android:background="@drawable/et_bg"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="Change email to:"
            android:textSize="15sp"
            android:paddingTop="10dp" />

        <EditText
            android:id="@+id/change_email"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:textSize="15sp"
            android:paddingLeft="10dp"
            android:background="@drawable/et_bg" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Change level to:"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:paddingTop="10dp" />

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rad_settings"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txt_settings"
            app:layout_constraintBottom_toBottomOf="parent"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rad_settings_beginner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="Beginner"
                android:textSize="15sp"
                android:checked="false"/>
            <RadioButton
                android:id="@+id/rad_setting_intermediate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Intermediate"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:checked="false"/>
            <RadioButton
                android:id="@+id/rad_setting_advanced"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="Advanced"
                android:textSize="15sp"
                android:checked="false"/>
        </RadioGroup>

    </LinearLayout>


    <!-- TODO: Update blank fragment layout -->



    <Button
        android:id="@+id/btn_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>